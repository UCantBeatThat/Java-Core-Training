package com.training;

import com.training.models.Computers;
import com.training.models.Furniture;
import com.training.models.Rent;
import com.training.services.ItemService;

public class BillingApplication {
	
	public static void main(String[] args) {
		
		Rent computers = new Computers("HP", 100, 39420.59);
		
		Rent furnitures = new Furniture("Chair", 40, 499.99);
		
		int key = 1;
		
		int qty = 2;
		
		double totalRent = 0.0, itemRent = 0.0;
		
		ItemService service = new ItemService();
		
		itemRent = service.getItemKeyRent(key, qty);
		
		System.out.println("Item1 Total = " + itemRent);
		
		totalRent += itemRent;
		
		key = 2;
		qty = 5;
		
		itemRent = service.getItemKeyRent(key, qty);
		
		totalRent += itemRent;
		
		System.out.println("Item1 Total = " + itemRent);
		
		System.out.println("\nGrand Total = " + totalRent);
	}
}
