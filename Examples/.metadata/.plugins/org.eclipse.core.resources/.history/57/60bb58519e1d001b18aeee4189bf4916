package com.training;

import com.training.models.Computers;
import com.training.models.Furniture;
import com.training.models.RentItem;
import com.training.services.ItemService;

public class BillingApplication {
	
	public static void main(String[] args) {
		
		RentItem computers = new Computers("HP", 100, 39420.59);
		
		RentItem furnitures = new Furniture("Chair", 40, 499.99);
		
		int key = 1;
		
		int qty = 2;
		
		double totalRent = 0.0, itemRent = 0.0;
		
		ItemService service = new ItemService();
		
		if(key == 1) {
			itemRent = service.getItemKeyRent(computers, qty);
		}
		else if(key == 2) {
			itemRent = service.getItemKeyRent(furnitures, qty);
		}
		
		System.out.println("Item1 Total = " + itemRent);
		System.out.println("-----------------------------------\n");
		
		totalRent += itemRent;
		
		// Repeat the following snippet
		key = 2;
		qty = 5;
		
		if(key == 1) {
			itemRent = service.getItemKeyRent(computers, qty);
		}
		else if(key == 2) {
			itemRent = service.getItemKeyRent(furnitures, qty);
		}
		
		totalRent += itemRent;
		
		System.out.println("Item2 Total = " + itemRent);
		System.out.println("-----------------------------------\n");
		
		// snippet ends here till here
		
		key = 2;
		qty = 36;
		
		if(key == 1) {
			itemRent = service.getItemKeyRent(computers, qty);
		}
		else if(key == 2) {
			itemRent = service.getItemKeyRent(furnitures, qty);
		}
		
		totalRent += itemRent;
		
		System.out.println("Item3 Total = " + itemRent);
		System.out.println("-----------------------------------\n");
		
		System.out.println("\nGrand Total = " + totalRent);
	}
}
