package com.training.services;

import com.training.models.*;

public class ItemService {
	
	public double getItemKeyRent(RentItem item, int qty, int days) {
		
		double itemRent = 0.0;
		
		if(item instanceof Computer) {
			Computer item1 = (Computer)item;
			if(item1.updateQuantity(qty)) {
				itemRent = item1.calculateRent(qty, days);
			}
			
		}
		else if(item instanceof Furniture) {
			Furniture item1 = (Furniture)item;
			if(item1.updateQuantity(qty)) {
				itemRent = item1.calculateRent(qty, days);
			}
		}
		
		return itemRent;
	}
}
